@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<p>Find machine (by name or number):</p>
<hr />
@using (Html.BeginForm("Index", "Machines", FormMethod.Get))
{
  <p>@Html.TextBox("searchMachine")</p>
  <button class="btn" type="submit">Search</button>
}

<h3>Machine list:</h3>
<hr />
@if (@Model.Count == 0)
{
  <p>No machine have been found.</p>
} 

@foreach (Machine machine in Model)
{
  <p>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }) | @machine.Number, @machine.Status</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new machine", "Create")</p> 