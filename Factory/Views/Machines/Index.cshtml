@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Home", "Index", "Home")</p>
    <p class="links-buttons">@Html.ActionLink("Add new machine", "Create")</p>
  </div>
  <div class="col-md-9">
    <p>Find machine:</p>
    @using (Html.BeginForm("Index", "Machines", FormMethod.Get))
    {
      <p>@Html.TextBox("searchMachine")</p>
      <button class="btn" type="submit">Search</button>
    }
    <hr />
    <h3>Machine list:</h3>
    <hr />
    @if (@Model.Count == 0)
    {
      <p>No machine have been found.</p>
    } 
    @foreach (Machine machine in Model)
    {
      <p class="links">@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</p> 
    }
  </div>
</div>