@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Add new incident:</h3>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <div class="form-group">
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type, new {@class = "form-control"})
  </div>
  <div class="form-group"> 
    @Html.Label("Select engineer:")
    @Html.DropDownList("EngineerId")
  </div>
  <input type="submit" value="Add new incident" class="btn" />
}

<p>@Html.ActionLink("Back to incidents list", "Index")</p>