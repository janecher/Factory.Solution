@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Back to machines list", "Index")</p>
  </div>
  <div class="col-md-9">
    <h3>Edit machine info:</h3>
    <hr />
    <p class="info">@Html.DisplayFor(model => model.Name)</p>
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.MachineId)
      <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new {@class = "form-control", @required  = "required"})
      </div>
      <div class="form-group"> 
        @Html.Label("Select location:")
        @Html.DropDownList("LocationId")
      </div>
      <input type="submit" value="Edit" class="btn" />
    }
  </div>
</div>