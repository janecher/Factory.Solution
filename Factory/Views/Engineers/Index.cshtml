@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Home", "Index", "Home")</p>
    <p class="links-buttons">@Html.ActionLink("Add new engineer", "Create")</p>   
  </div>
  <div class="col-md-9">
    <p>Find engineer (by name or license):</p>
    @using (Html.BeginForm("Index", "Engineers", FormMethod.Get))
    {
      <p>@Html.TextBox("searchEngineer")</p>
      <button class="btn" type="submit">Search</button>
    }
    <h3>Engineer list:</h3>
    <hr />
    @if (@Model.Count == 0)
    {
      <p>No engineer have been found.</p>
    } 

    @foreach (Engineer engineer in Model)
    {
      <p class="links">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</p> 
    }
  </div>
</div>
