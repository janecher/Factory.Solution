@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h3>Edit engineer info:</h3>
<hr />
<p class="info">@Html.DisplayFor(model => model.Name)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.EditFor(model => model.Name, new {@class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.License)
    @Html.EditFor(model => model.LicenseName, new {@class = "form-control"})
  </div>
  <div class="form-group"> 
    @Html.Label("Select location:")
    @Html.DropDownList("LocationId")
  </div>
  <div class="form-group"> 
    @Html.Label("Select machines:")
    @foreach (Machine machine in ViewBag.MachineId)
    {
      @Html.Label(machine.Name)
      @Html.CheckBox("MachineId", false, new { value = machine.MachineId })
    }
  </div>
  <input type="submit" value="Edit" class="btn" />
}
<p>@Html.ActionLink("Back to engineers list", "Index")</p>