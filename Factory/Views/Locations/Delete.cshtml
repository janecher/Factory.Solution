@{
  Layout = "_Layout";
}

@model Factory.Models.Location

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Back to locations list", "Index")</p>
  </div>
  <div class="col-md-9">
    <h3>Are you sure you want to delete this location?</h3>
    <hr />
    <p class="info">@Html.DisplayFor(model => model.Name)</p>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class="btn"/>
    }
  </div>
</div>
