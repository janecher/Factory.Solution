@{
  Layout = "_Layout";
}

@model Factory.Models.Incident

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Back to incidents list", "Index")</p>
  </div>
  <div class="col-md-9">
    <h3>Edit an incident:</h3>
    <hr />
    <p class="info">@Html.DisplayFor(model => model.Description)</p>
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.IncidentId)
      <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description, new {@class = "form-control", @required  = "required"})
      </div>
      <div class="form-group"> 
        @Html.Label("Select machine:")
        @Html.DropDownList("MachineId")
      </div>
      <div class="form-group"> 
        @Html.Label("Select engineer:")
        @Html.DropDownList("EngineerId")
      </div>
      <input type="submit" value="Edit" class="btn" />
    }
  </div>
</div>
