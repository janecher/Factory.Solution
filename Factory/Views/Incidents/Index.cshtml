@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Incident>

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Home", "Index", "Home")</p>
    <p class="links-buttons">@Html.ActionLink("Add new incident", "Create")</p>
  </div>
  <div class="col-md-9">
    <h3>Incident list:</h3>
    <hr />
    @if (@Model.Count == 0)
    {
      <p>No incidents have been found.</p>
    } 

    @foreach (Incident incident in Model)
    {
      <p class="links">@Html.ActionLink($"{incident.Description}", "Details", new { id = incident.IncidentId })</p>  
    }
  </div>
</div>
