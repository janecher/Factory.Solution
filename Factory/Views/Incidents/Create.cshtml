@{
  Layout = "_Layout";
}

@model Factory.Models.Incident

<h3>Add a new incident:</h3>
<hr />
@if(ViewBag.MachinesNumber == 0 || ViewBag.EngineersNumber == 0)
{
  <p>No machine or engineers available to attach an incident.</p>
}
else
{
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Description)
      @Html.TextBoxFor(model => model.Description, new {@class = "form-control"})
    </div>
    <div class="form-group"> 
      @Html.Label("Select machine:")
      @Html.DropDownList("MachineId")
    </div>
    <div class="form-group"> 
      @Html.Label("Select engineer:")
      @Html.DropDownList("EngineerId")
    </div>
    <input Description="submit" value="Add new incident" class="btn" />
  }
}

<p>@Html.ActionLink("Back to incidents list", "Index")</p>