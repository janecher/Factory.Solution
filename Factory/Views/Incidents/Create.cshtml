@{
  Layout = "_Layout";
}

@model Factory.Models.Incident

<div class="row">
  <div class="col-md-3">
    <p class="links-buttons">@Html.ActionLink("Back to incidents list", "Index")</p>
  </div>
  <div class="col-md-9">
    <h3>Add a new incident:</h3>
    <hr />
    @if(ViewBag.MachinesNumber == 0 || ViewBag.EngineersNumber == 0)
    {
      <p>No machine or engineers available to attach an incident.</p>
    }
    else
    {
      @using (Html.BeginForm())
      {
        <div class="form-group">
          @Html.LabelFor(model => model.Description)
          @Html.TextBoxFor(model => model.Description, new {@class = "form-control", @required  = "required"})
        </div>
        <div class="form-group"> 
          @Html.Label("Select machine:")
          @Html.DropDownList("MachineId")
        </div>
        <div class="form-group"> 
          @Html.Label("Select engineer:")
          @Html.DropDownList("EngineerId")
        </div>
        <input type="submit" value="Add new incident" class="btn" />
      }
    }
  </div>
</div>