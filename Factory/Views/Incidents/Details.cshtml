@{
  Layout = "_Layout";
}

@model Factory.Models.Incident

<h3>Incident info:</h3>
<hr />
<p class="info">@Html.DisplayFor(model => model.Type)</p>
<p class="info">@Html.DisplayFor(model => model.StatusInfo)</p>
<p>@Html.ActionLink($"{Model.Machine.Name}", "Details", "Machines", new { id = Model.IncidentId})</p>
@if(Model.EngineerId != null)
{
  <p>@Html.ActionLink($"{Model.Engineer.Name}", "Details", "Engineers", new { id = Model.EngineerId})</p>
}
